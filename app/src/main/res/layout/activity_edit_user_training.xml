<!-- res/layout/activity_edit_user_training.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/training_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Training Name" />

    <LinearLayout
        android:id="@+id/exercises_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/add_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/save_training_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Training"
        android:layout_marginTop="16dp" />
</LinearLayout>
