<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_frame_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Paused"
        android:textSize="22sp"
        android:textColor="#3100d4"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to resume, restart, or cancel the training?"
        android:textSize="16sp"
        android:textColor="#3100d4"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnResume"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_alternate_green"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnRestart"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gradient_alternate_orange"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Training"
        android:textColor="@android:color/white"
        android:background="@drawable/button_red_gradient" />
</LinearLayout>
