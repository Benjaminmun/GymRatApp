<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <!-- Disable default background and ripple effect -->
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="ModernAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item> <!-- Dialog background -->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item> <!-- Text styling -->
        <item name="android:padding">16dp</item> <!-- Add padding -->
        <item name="android:windowMinWidthMajor">80%</item> <!-- Width as percentage of screen -->
    </style>

    <style name="BodyText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>